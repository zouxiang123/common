<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xtt.common.dao.mapper.CmFormNodesMapper">
   <!-- 自定义 -->
  <resultMap id="ResultMap" type="com.xtt.common.dto.FormNodesDto" >
    <!-- basic items -->
    <result column="item_desc" jdbcType="VARCHAR" property="itemDesc" />
    <result column="unit" jdbcType="VARCHAR" property="unit" />
    <result column="need_score" jdbcType="BIT" property="needScore" />
    <result column="score" jdbcType="INTEGER" property="score" />
    <result column="is_fixed" jdbcType="BIT" property="isFixed" />
    <result column="fk_code" jdbcType="VARCHAR" property="fkCode" />
    <result column="data_type" jdbcType="VARCHAR" property="dataType" />
 	<result column="min_value" jdbcType="DECIMAL" property="minValue" />
    <result column="max_value" jdbcType="DECIMAL" property="maxValue" />
    <result column="group_tag" jdbcType="VARCHAR" property="groupTag" />
    <result column="child_value_node" jdbcType="BIT" property="childValueNode" />
  	<!-- form items -->
  	<result column="fk_form_id" jdbcType="BIGINT" property="fkFormId" />
    <result column="item_name" jdbcType="VARCHAR" property="itemName" />
    <result column="p_item_code" jdbcType="VARCHAR" property="pItemCode" />
    <result column="item_code" jdbcType="VARCHAR" property="itemCode" />
    <result column="order_by" jdbcType="INTEGER" property="orderBy" />
    <result column="sys_owner" jdbcType="VARCHAR" property="sysOwner" />
    <result column="item_path" jdbcType="VARCHAR" property="itemPath" />
    <result column="item_level" jdbcType="INTEGER" property="itemLevel" />
    <result column="is_leaf" jdbcType="BIT" property="isLeaf" />
    <result column="is_enable" jdbcType="BIT" property="isEnable" />
    <result column="fk_tenant_id" jdbcType="INTEGER" property="fkTenantId" />
    <result column="display_style" jdbcType="VARCHAR" property="displayStyle" />
    <result column="display_col" jdbcType="INTEGER" property="displayCol" />
    <result column="display_width" jdbcType="VARCHAR" property="displayWidth" />
    <result column="item_type" jdbcType="VARCHAR" property="itemType" />
  </resultMap>
  
  <select id="selectByCondition" parameterType="com.xtt.common.dto.FormNodesDto" resultMap="ResultMap">
  	SELECT 
		fi.fk_form_id,fi.item_name,fi.p_item_code,fi.item_code,fi.order_by,fi.sys_owner,fi.item_path,fi.item_level,fi.is_leaf,fi.is_enable,fi.fk_tenant_id,fi.display_style,fi.display_col,fi.display_width,fi.item_type
		,fbi.item_desc,fbi.unit,fbi.need_score,fbi.score,fbi.is_fixed,fbi.fk_code,fbi.data_type,fbi.min_value,fbi.max_value,fbi.group_tag,fbi.child_value_node
	FROM cm_form_items fi 
	LEFT JOIN cm_form_base_items fbi ON fbi.item_code = fi.item_code AND fbi.fk_tenant_id = fi.fk_tenant_id and fbi.sys_owner = fi.sys_owner
  	<where>
  		<!-- follow items -->
  		<if test="fkFormId">
  		  fi.fk_form_id=#{fkFormId}
  		</if>
  		<if test="itemName != null">
		  AND fi.item_name = #{itemName}
		</if>
		<if test="pItemCode != null">
		  AND fi.p_item_code = #{pItemCode}
		</if>
		<if test="itemCode != null">
		  AND fi.item_code = #{itemCode}
		</if>
		<if test="orderBy != null">
		  AND fi.order_by = #{orderBy}
		</if>
		<if test="sysOwner != null">
		  AND fi.sys_owner = #{sysOwner}
		</if>
		<if test="itemPath != null">
		  AND fi.item_path = #{itemPath}
		</if>
		<if test="itemLevel != null">
		  AND fi.item_level = #{itemLevel}
		</if>
		<if test="isLeaf != null">
		  AND fi.is_leaf = #{isLeaf}
		</if>
		<if test="isEnable != null">
		  AND fi.is_enable = #{isEnable}
		</if>
		<if test="fkTenantId != null">
		  AND fi.fk_tenant_id = #{fkTenantId}
		</if>
		<if test="itemType != null">
		  AND fi.item_type = #{itemType}
		</if>
		<!-- basic item -->
		<if test="unit != null">
		  AND fbi.unit = #{unit}
		</if>
		<if test="isFixed != null">
		  AND fbi.is_fixed = #{isFixed}
		</if>
		<if test="fkCode != null">
		  AND fbi.fk_code = #{fkCode}
		</if>
		<if test="dataType != null">
		  AND fbi.data_type = #{dataType}
		</if>
  	</where>
  	ORDER BY fi.p_item_code,fi.order_by
  </select>
</mapper>